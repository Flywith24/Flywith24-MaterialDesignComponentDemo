<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_two_line_row_height"
    android:paddingLeft="@dimen/list_horizontal_padding"
    android:paddingRight="@dimen/list_horizontal_padding">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rowIcon"
        android:layout_width="@dimen/list_icon_size"
        android:layout_height="@dimen/list_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_demo_play_circle_outline_vd_theme_24px" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_text_margin_from_icon"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintStart_toEndOf="@id/rowIcon"
        app:layout_constraintTop_toTopOf="@id/rowIcon"
        tools:text="Demo" />

    <TextView
        android:id="@+id/rowSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceCaption"
        app:layout_constraintBottom_toBottomOf="@id/rowIcon"
        app:layout_constraintStart_toStartOf="@id/rowTitle"
        tools:text="MainDemoFragment" />
</androidx.constraintlayout.widget.ConstraintLayout>